{
  "name": "siberiana-turbo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "clean": "turbo run clean && git clean -xdf node_modules",
    "dev": "turbo run dev",
    "dev:client": "dotenv -e .env -- turbo run dev --filter=@siberiana/client",
    "dev:strapi": "dotenv -e .env -- turbo run dev --filter=@siberiana/strapi",
    "dev:docs": "dotenv -e .env -- turbo run dev --filter=docs",
    "lint": "turbo run lint",
    "format": "prettier --write . --ignore-path .gitignore",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "typecheck": "turbo run typecheck"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.1",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "@manypkg/cli": "^0.20.0",
    "@siberiana/eslint-config": "0.1.0",
    "@types/node": "20.2.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "autoprefixer": "^10.4.14",
    "class-variance-authority": "^0.6.0",
    "clsx": "^1.2.1",
    "dotenv": "latest",
    "lucide-react": "^0.244.0",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwind-merge": "^1.13.1",
    "tailwindcss": "^3.3.2",
    "tailwindcss-animate": "^1.0.6",
    "turbo": "^1.10.3",
    "typescript": "5.1.3"
  },
  "packageManager": "pnpm@8.6.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "docs"
  ]
}
